---
const { posts, dir = 'blog' } = Astro.props
const { prev, next } = posts
---

<nav class='post-nav'>
  {
    prev && (
      <a
        class='button'
        data-type='outline'
        href={`/${dir}/${prev.slug}`}
        data-link-to='previous-post'
      >
        <svg height='1em' viewbox='0 0 22 38'>
          <path
            fill='currentColor'
            d='M18.9 38l3.1-3.1L6.1 19 22 3.1 18.9 0 0 19z'
          />
        </svg>
        <span>{prev.data.title}</span>
      </a>
    )
  }

  {
    next && (
      <a
        class='button'
        data-type='outline'
        href={`/${dir}/${next.slug}`}
        data-link-to='next-post'
      >
        <span>{next.data.title}</span>
        <svg height='1em' viewbox='0 0 22 38'>
          <path
            fill='currentColor'
            d='M3.1 0L0 3.1 15.9 19 0 34.9 3.1 38 22 19z'
          />
        </svg>
      </a>
    )
  }
</nav>
